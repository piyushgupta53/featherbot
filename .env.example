# ──────────────────────────────────────────────
# FeatherBot — Environment Configuration
# Copy to .env and fill in your values
# ──────────────────────────────────────────────

# ── LLM Providers ──

# Anthropic API key (required if using Claude models)
FEATHERBOT_providers__anthropic__apiKey=

# OpenAI API key (required if using OpenAI models)
FEATHERBOT_providers__openai__apiKey=

# OpenRouter API key (required if using OpenRouter models)
FEATHERBOT_providers__openrouter__apiKey=

# ── Agent Defaults ──

# LLM model identifier (default: anthropic/claude-sonnet-4-5-20250929)
FEATHERBOT_agents__defaults__model=anthropic/claude-sonnet-4-5-20250929

# Agent workspace directory (default: ~/.featherbot/workspace)
FEATHERBOT_agents__defaults__workspace=~/.featherbot/workspace

# Max tokens per LLM response (default: 8192)
FEATHERBOT_agents__defaults__maxTokens=8192

# LLM temperature 0-2 (default: 0.7)
FEATHERBOT_agents__defaults__temperature=0.7

# Max tool call iterations per request (default: 20)
FEATHERBOT_agents__defaults__maxToolIterations=20

# ── Channels: Telegram ──

# Enable Telegram channel (default: false)
FEATHERBOT_channels__telegram__enabled=false

# Telegram bot token from @BotFather
FEATHERBOT_channels__telegram__token=

# Comma-separated Telegram usernames allowed to interact (empty = allow all)
# FEATHERBOT_channels__telegram__allowFrom=username1,username2

# ── Channels: WhatsApp ──

# Enable WhatsApp channel (default: false)
FEATHERBOT_channels__whatsapp__enabled=false

# WhatsApp auth state directory (default: ~/.featherbot/whatsapp-auth)
FEATHERBOT_channels__whatsapp__authDir=~/.featherbot/whatsapp-auth

# Comma-separated WhatsApp JIDs allowed to interact (empty = allow all)
# FEATHERBOT_channels__whatsapp__allowFrom=1234567890@s.whatsapp.net

# ── Channels: Discord ──

# Enable Discord channel (default: false, not yet implemented)
FEATHERBOT_channels__discord__enabled=false

# Discord bot token
FEATHERBOT_channels__discord__token=

# ── Tools: Web Search ──

# Brave Search API key (required for web search tool)
FEATHERBOT_tools__web__search__apiKey=

# Max search results to return (default: 5)
FEATHERBOT_tools__web__search__maxResults=5

# ── Tools: Web Fetch ──

# Max content length in characters (default: 50000)
FEATHERBOT_tools__web__fetch__maxContentLength=50000

# Fetch timeout in milliseconds (default: 30000)
FEATHERBOT_tools__web__fetch__timeoutMs=30000

# ── Tools: Exec ──

# Shell command timeout in seconds (default: 60)
FEATHERBOT_tools__exec__timeout=60

# Restrict file tools to workspace directory (default: false)
FEATHERBOT_tools__restrictToWorkspace=false

# ── Session ──

# SQLite database path for session history (default: ~/.featherbot/sessions.db)
FEATHERBOT_session__dbPath=~/.featherbot/sessions.db

# Max messages to keep in session context (default: 50)
FEATHERBOT_session__maxMessages=50

# ── Cron Scheduler ──

# Enable cron scheduler (default: true)
FEATHERBOT_cron__enabled=true

# Path to cron job store file (default: ~/.featherbot/cron.json)
FEATHERBOT_cron__storePath=~/.featherbot/cron.json

# ── Heartbeat ──

# Enable heartbeat service (default: true)
FEATHERBOT_heartbeat__enabled=true

# Heartbeat interval in milliseconds (default: 1800000 = 30 minutes)
FEATHERBOT_heartbeat__intervalMs=1800000

# Heartbeat file name in workspace (default: HEARTBEAT.md)
FEATHERBOT_heartbeat__heartbeatFile=HEARTBEAT.md

# ── Sub-agents ──

# Max tool iterations for sub-agents (default: 15)
FEATHERBOT_subagent__maxIterations=15

# Sub-agent timeout in milliseconds (default: 300000 = 5 minutes)
FEATHERBOT_subagent__timeoutMs=300000
