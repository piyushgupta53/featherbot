{
	"name": "@featherbot/cli",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"featherbot": "./dist/bin.js",
		"fb": "./dist/bin.js"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsup src/index.ts src/bin.ts --format esm --dts",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src/",
		"test": "vitest run --passWithNoTests"
	},
	"engines": {
		"node": ">=20"
	},
	"dependencies": {
		"@featherbot/bus": "workspace:*",
		"@featherbot/channels": "workspace:*",
		"@featherbot/core": "workspace:*",
		"@featherbot/scheduler": "workspace:*",
		"@whiskeysockets/baileys": "7.0.0-rc.9",
		"commander": "^13.1.0"
	},
	"devDependencies": {
		"vitest": "^3.0.5"
	}
}
